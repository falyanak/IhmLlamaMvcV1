@model ReferentielAPI.Entites.AgentPermissions;

@{
    var nom = Model.Nom;
    var prenom = Model.Prenom;
}

<div class="navbar">
    <h1>IHM LLAMA3</h1>
 </div>

<div class="sidebar" id="mySidebar">
    <button id="resetButton" class="reset">Réinitialiser la conversation</button>
    <a href="#">Historique</a>
    <a href="#">requête 1</a>
</div>

<div class="main-content">
    <h5>Bonjour @prenom @nom, posez votre question :</h5>
    <form id="searchForm">
        <textarea class="entrer" id="requete" placeholder="Tapez votre question ici..." required></textarea>
        <button type="submit" class="recherche" id="rechercher">Rechercher</button>
    </form>

    <partial name="_BusyIndicatorPartial" />

    <textarea class="resultat" id="Output" placeholder="L'IA générera sa réponse ici :" disabled></textarea>

    <h4>Historique des entrées</h4>
    <div class="historique">
        <ul id="historyList"></ul>
    </div>
</div>

<script src="~/js/ShowIaprompt.js"></script>

